<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carpool.cmpe220.carpoolapplication.MainActivity$PlaceholderFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/spartans_logo_blur"
        android:scaleType="centerInside"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Rider"
        android:textColor="#0D47A1">

    </Switch>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true">



        <EditText
            android:id="@+id/editText22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="From"
            android:textColorHint="#0D47A1"
            android:layout_marginRight="50dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date"
            android:textColorHint="#0D47A1"
            android:layout_marginRight="50dp"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/switch1"
        android:layout_alignParentEnd="true">


        <EditText
            android:id="@+id/editText24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="To"
            android:textColorHint="#0D47A1"
            android:layout_marginLeft="70dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Time"
            android:textColorHint="#0D47A1"
            android:layout_marginLeft="70dp"
            android:inputType="time" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:fontFamily="sans-serif"
        android:textColor="#FFC107"
        android:textColorHighlight="#64B5F6"
        android:background="#0D47A1"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/button2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2" />

</RelativeLayout>
